{% extends 'base.html.twig' %}

{% block title %}Tareas{% endblock %}

{% block body %}
    <h1>Tareas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tarea.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ tarea.titulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ tarea.descripcion }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ tarea.fecha ? tarea.fecha|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Usuario asignado</th>
                <td>{{ usuario.nombre }}</td>
            </tr>
            <tr>
                <th>Categoria de la tarea</th>
                <td>{{ categoria.nombre }}</td>
            </tr>
        </tbody>
    </table>

    <a class="links" href="{{ path('app_tareas_index') }}">Volver a la lista</a>

    <a class="links" href="{{ path('app_tareas_edit', {'id': tarea.id}) }}">Editar tarea</a>

    {{ include('tareas/_delete_form.html.twig') }}
{% endblock %}
